<h2 align="center">Code Title: <%= @article.title %> </h2>
<div class="well col-xs-8 col-xs-offset-2">
  <% if @article.user %>
    <ul class="listing">
      <div class="row center">
        <div class="col-md-4 col-md-offset-4">
          <li>Given Birth by:</li>
          <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
          <li class="article-title"><%= link_to @article.user.username, user_path(@article.user) %></li>
          <li><small><%= pluralize(@article.user.articles.count, "code") if @article.user.articles %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
  <h4 class="center"><strong>Description:</strong></h4>
  <hr>
  
  <pre>
    <code>
      <%= @article.description %> 
    </code>
    <button data-copytarget="#website">Copy</button>
  </pre>
  
    <br>
    
  <div class="article-actions center">
    <% if logged_in? && current_user == @article.user %>
    <p>PhP my ass!!!</p>
      <%= link_to "See mistakes? Edit the code now!!!", edit_article_path(@article), class: "btn btn-xs btn-warning" %> | 
      <%= link_to "Delete This!!!", article_path(@article), method: :delete, data: { confirm: "Are you sure? You really want to delete this???"}, class: "btn btn-xs btn-danger" %> | 
    <% end %>
    <%= link_to "Back to da list", articles_path, class: "btn btn-xs btn-info" %>
  </div>

</div>