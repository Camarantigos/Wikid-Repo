<% obj.each do |article| %> 
<div class="row">
  <div class="col-xs-10 col-xs-offset-2">
    <div class="well well-lg">
      <div class="article-title">
        <%= link_to article.title, article_path(article) %>
      </div>
      <div class="article-body">
        <%= truncate(article.description, length:200) %>
        <div class="article-meta-details">
        <small>Created by: <%= article.user.username if article.user %>, <%= time_ago_in_words(article.created_at) %> ago, Last updated: <%= time_ago_in_words(article.updated_at)%> ago</small>
        </div>
      </div>
      <% if article.categories.any? %>
        <p>Caterogies: <%= render article.categories %></p>
      <% end %>
      <% if logged_in? && (current_user == article.user || current_user.admin?) %>
        <div class="article-actions center">
          <%= link_to "Edit the code now!!!", edit_article_path(article), class: "btn btn-xs btn-warning" %> | 
          <%= link_to "Delete This!!!", article_path(article), method: :delete, data: { confirm: "Are you sure? You really want to delete this code???"}, class: "btn btn-xs btn-danger" %>
        </div>
      <% end %>
      </div>
    </div>
</div>

<% end %>
